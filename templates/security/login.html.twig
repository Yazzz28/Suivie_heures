{% extends 'base.html.twig' %}

{% block title %}Connection{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="logged-in">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }},
                    <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            <h1>Connection</h1>

            <form method="post">
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
                </div>

                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" autocomplete="current-password" required>
                </div>

                <div class="form-group form-check">
                    <input type="checkbox" name="_remember_me" id="rememberMe" class="form-check-input">
                    <label for="rememberMe" class="form-check-label">Se souvenir de moi</label>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn" type="submit">Connection</button>
            </form>

            <div class="register-link">
                <a href="{{ path('app_register') }}">Inscrivez-vous</a>
            </div>
        </div>
    </div>

    <style>
        /* Global Styles */
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            color: #333;
        }

        /* Container centré */
        .container {
            max-width: 400px;
            margin: 40px auto;
            padding: 0 20px;
        }

        /* Card */
        .card {
            background-color: #fff;
            border: none;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-5px);
        }

        /* Headings */
        h1 {
            font-size: 1.5rem;
            text-align: center;
            margin-bottom: 20px;
            color: #0d6efd;
        }

        /* Form groups */
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        .form-group input[type="email"],
        .form-group input[type="password"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #dee2e6;
            border-radius: 4px;
            font-size: 1rem;
        }

        /* Checkbox */
        .form-group.form-check {
            display: flex;
            align-items: center;
        }
        .form-group.form-check input {
            margin-right: 5px;
        }
        .form-check-label {
            font-weight: normal;
        }

        /* Button */
        .btn {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 25px;
            background-color: #0d6efd;
            color: #fff;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .btn:hover {
            background-color: #0b5ed7;
        }

        /* Alert */
        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border: 1px solid transparent;
            border-radius: 4px;
        }
        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
        }

        /* Logged-in message */
        .logged-in {
            text-align: center;
            margin-bottom: 15px;
            font-size: 0.9rem;
        }
        .logged-in a {
            color: #0d6efd;
            text-decoration: none;
        }
        .logged-in a:hover {
            text-decoration: underline;
        }

        /* Register link */
        .register-link {
            text-align: center;
            margin-top: 20px;
        }
        .register-link a {
            text-decoration: none;
            color: #0d6efd;
            transition: color 0.3s;
        }
        .register-link a:hover {
            color: #0b5ed7;
        }

        /* Responsive Styles */
        @media (max-width: 480px) {
            .container {
                margin: 20px auto;
                padding: 0 10px;
            }
        }
    </style>
{% endblock %}
